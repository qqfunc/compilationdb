{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeAll",
    ":disableDependencyDashboard",
    ":label(dependencies)",
    ":semanticCommits",
    ":semanticPrefixChore"
  ],
  "automergeStrategy": "squash",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"]
  }
}
